type Apartment {
  id: ID! @unique @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  image: String
  places: [Place]!
  # owner: User!
  # tenants: [User]!
}

type User {
  id: ID! @unique @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  email: String! @unique
  password: String!
  name: String!
}

type Place {
  id: ID! @unique @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  difficulty: Int!
  apartment: Apartment!
  lastCleanedAt: DateTime
}

type IWasntThere {
  id: ID! @unique @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  date: DateTime!
  user: User!
  apartment: Apartment!
}
